<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" >
    <stylesheets>
        <URL value="@../css/generic.css" />
    </stylesheets>

    <Label styleClass="header">New Category</Label>

    <Label>Name</Label>
    <TextField fx:id="newCategoryCategoryNameTextBox" text="Category Name" />

    <Button fx:id="newCategoryCreateCategoryButton">Create</Button>
    <Button>Cancel</Button>

    <Label fx:id="newCategoryCategoryExistsErrorLabel" visible="false" styleClass="errorMessage">Category already exists!</Label>
    <Label fx:id="newCategoryFailedToCreateCategoryErrorLabel" visible="false" styleClass="errorMessage">Failed to create category</Label>

</VBox>
